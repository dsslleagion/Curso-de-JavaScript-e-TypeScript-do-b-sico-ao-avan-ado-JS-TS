<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row justify-content-center my-3">
    <div class="col-lg-10">
      <h1 class="text-center">Login</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>

      <div class="row">
        <!-- Formulário de cadastro à esquerda -->
        <div class="col-lg-6">
          <h4>Faça seu cadastro</h4>
          <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>
          <form action="/login/register" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken%>>
            <div class="form-group mb-3">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group mb-3">
              <label >Senha</label>
              <input type="password"class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-primary">Criar minha conta</button>
          </form>
        </div>

        <!-- Título "Entrar no sistema" à direita -->
        <div class="col-lg-6 text-end">
          <h4>Entrar no sistema</h4>
          <p>Se você já possui uma conta, faça login abaixo:</p>
          <form action="/login/login" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken%>>
            <div class="form-group mb-3">
              <label >Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group mb-3">
              <label>Senha</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-success">Entrar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('includes/footer') %>
